fun main() {
    /@ requires acc(heap[0]) @/
    /@ requires acc(heap[1]) @/
    /@ requires acc(heap[2]) @/
    /@ requires 0 <= heap[0] && heap[0] < 256 @/
    /@ requires 0 <= heap[2] && heap[2] < 256 @/
    /@ requires alen(heap) >= 3 @/
    var {1} x = lds {1} @base;
    var 2 y = lds 2 @base + 8;
    return x.0 + y.1;
